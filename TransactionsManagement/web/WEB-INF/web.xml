<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>sample.filters.FilterDispatcher</filter-class>
    </filter>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sample.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>sample.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>sample.servlets.TransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferServlet</servlet-name>
        <servlet-class>sample.servlets.TransferServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContinueOrNotServlet</servlet-name>
        <servlet-class>sample.servlets.ContinueOrNotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintTransactionServlet</servlet-name>
        <servlet-class>sample.servlets.PrintTransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HideServlet</servlet-name>
        <servlet-class>sample.servlets.HideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/TransactionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferServlet</servlet-name>
        <url-pattern>/TransferServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContinueOrNotServlet</servlet-name>
        <url-pattern>/ContinueOrNotServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintTransactionServlet</servlet-name>
        <url-pattern>/PrintTransactionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HideServlet</servlet-name>
        <url-pattern>/HideServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>TransManage</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
